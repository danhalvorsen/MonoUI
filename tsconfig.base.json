// tsconfig.base.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@mono/*": ["packages/*/src"]
    },
    "types": ["node", "vitest/globals"]
  },
  "exclude": ["node_modules", "dist"]
}
