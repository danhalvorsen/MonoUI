{
  "name": "mono-ui",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "generate-barrels": "barrelbot ./packages/mr-abstract-components/src",
    "fix-barrels": "node scripts/fix-barrel-exports.mjs ./packages/mr-abstract-components/src/index.ts",
    "build": "npm run build --workspaces",
    "build:packages": "npm run build --workspace packages/*",
    "build:apps": "npm run build --workspace apps/*",
    "build:cli": "npm run build --workspace=cli-core-plugin-create-package-module && npm run build --workspace=cli-core",
    "test": "npm run test --workspaces",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@babel/parser": "^7.24.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "barrelsby": "^2.8.1",
    "chai": "^5.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "glob": "^10.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-progress": "^0.0.7"
  },
  "dependencies": {
    "cli-demo": "^1.0.0"
  }
}