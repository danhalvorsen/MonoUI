{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "module": "NodeNext",
    
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "types": [ "node"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
     
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
