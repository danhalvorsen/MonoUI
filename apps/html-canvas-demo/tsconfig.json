{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "target": "ES2021",
      "lib": ["DOM", "ES2021"],
      "types": ["vite/client"],
      "allowJs": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }