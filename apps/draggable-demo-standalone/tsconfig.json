{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "types": ["vite/client"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "paths": {
      "@my-graphics/math": ["../../packages/math/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
