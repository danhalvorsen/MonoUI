{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Canvas Demo (Simple)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-simple",
            "sourceMapPathOverrides": {
                "/@fs/*": "${workspaceFolder}/*",
                "/src/*": "${workspaceFolder}/apps/html-canvas-demo/src/*",
                "../packages/*": "${workspaceFolder}/packages/*",
                "../../packages/*": "${workspaceFolder}/packages/*",
                "*": "${webRoot}/*"
            },
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor"
            ]
        },
        {
            "name": "Debug Canvas Demo (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug",
            "sourceMapPathOverrides": {
                "/@fs/*": "${workspaceFolder}/*",
                "/src/*": "${workspaceFolder}/apps/html-canvas-demo/src/*",
                "../packages/*": "${workspaceFolder}/packages/*",
                "../../packages/*": "${workspaceFolder}/packages/*",
                "*": "${webRoot}/*"
            },
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor"
            ],
            "preLaunchTask": "Start Vite Dev Server"
        },
        {
            "name": "Attach to Chrome (Canvas Demo)",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "/@fs/*": "${workspaceFolder}/*",
                "/src/*": "${workspaceFolder}/apps/html-canvas-demo/src/*",
                "../packages/*": "${workspaceFolder}/packages/*",
                "../../packages/*": "${workspaceFolder}/packages/*",
                "*": "${webRoot}/*"
            }
        },
        {
            "name": "Debug Vitest Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": ["run", "--reporter=verbose"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "test"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}