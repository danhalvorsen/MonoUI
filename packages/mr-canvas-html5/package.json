{
  "name": "mr-canvas-html5",
  "version": "0.1.0",
  "description": "mr-canvas-html5 with IoC via tsyringe.",
  "type": "module",
  "module": "dist/src/index.js",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json  && npm run types",
    "types": "tsc --emitDeclarationOnly --declaration --declarationMap --project tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "int-test": "vitest run --config vitest.browser.config.ts",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "lit": "^3.3.0",
    "@my-graphics/math": "workspace:*",
    "mr-abstract-components": "workspace:*",
    "mr-style": "workspace:*"
  },
  "devDependencies": {
    "@eslint-community/eslint-utils": "^4.7.0",
    "@playwright/test": "^1.54.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/browser": "^2.1.9",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.31.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.0",
    "playwright": "^1.54.1",
    "vite": "^5.4.19",
    "vitest": "^2.1.9"
  }
}