{
  "name": "barrel-generator",
  "version": "1.0.0",
  "description": "A TypeScript barrel file generator using ts-morph",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "ts-morph": "^22.0.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "barrel",
    "index.ts",
    "codegen",
    "ts-morph"
  ],
  "author": "Your Name",
  "license": "MIT"
}
