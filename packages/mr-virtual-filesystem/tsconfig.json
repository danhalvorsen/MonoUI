{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
  
    "types": ["node"]
  },
  "include": ["src/**/*", "FileSystem/Filesystem.ts", "FileSystem/File.ts", "src/Impl/Directory.ts", "src/Impl/FileSystem.ts", "src/Impl/File.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
