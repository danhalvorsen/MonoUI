{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "allowJs": true,
    "paths": {
      "@src/*": ["src/*"],
      "@scripts/*": ["scripts/*"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "composite": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
